{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,        // ✅ Add this to avoid issues with ESLint and TypeScript
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "~/*": ["./*"],  // ✅ Alias for project root
      "@/*": ["./*"]   // ✅ Alternative alias
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules","./cypress/support/*"],
  "extends": "./.nuxt/tsconfig.json"
}
